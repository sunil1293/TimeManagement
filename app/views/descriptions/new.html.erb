<div class="breadcrumb">

<div id = "form-heading"><h3 >Daily Status Report</h3>
	<%= image_tag "divider.png" %>
</div>

 <%= form_for(:description, :url => { :action => :create }, :html => {:method => :post}) do |f| %>

 <table class = "table table-condensed">
 	<%= render :partial => "form", :locals => { :f => f } %>

	<%= f.hidden_field :user_id, :value => current_user.id %>
  	  
  <tr>
    <td class="pull-right"><%= f.submit %></td>
    <td><%= link_to 'Back', user_descriptions_path, :class => "btn btn-mini" %></td>
  </tr>
 </table>
<% end %>


