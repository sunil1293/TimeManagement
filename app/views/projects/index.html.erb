<div class = "breadcrumb">
<div id = "form-heading">
  <h3>Listing projects</h3><%= image_tag "divider.png" %>
</div>
<table class="table table-striped table-condensed table-hover">
   <thead>

    <tr>
      <th>Project Name</th>
      <th>Client</th>
      <th>Project Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.client %></td>
        <% if project.project_status == "Active" %>
        <td><span class="badge badge-success"><%= project.project_status %></span></td>
        <% else %>
        <td><span class="badge badge-warning"><%= project.project_status %></span></td>
        <% end %>
        <td><%= link_to 'Show', project, :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<center>
  <%= link_to 'New project', new_project_path, :class => 'btn btn-primary' %>
</center>
</div>