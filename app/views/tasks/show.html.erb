<div class="breadcrumb">
<div id="form-heading">
<h3>Task Details</h3><%= image_tag 'divider.png' %>
</div>

<table class="table table-striped table-condensed table-hover">
  <tbody>
      <tr>
        <td>Project :</td>
        <td><%= Project.find(@task.select_project).project_name %></td>
      </tr>
      <tr>
        <td>Task :</td>
        <td><%= @task.task %></td>
      </tr>
      <tr>
        <td>Task Description :</td>
        <td id="overflow"><%= @task.description %></td>
      </tr>
      <tr>
        <td>Task Status :</td>
        <td><span class="label label-info"><%= @task.status %></span></td>
      </tr>
      <tr>
        <% if @task.assigned_to == current_user.id %>
          <td>Task Assigned by :</td>
          <td><%= User.find(@task.user_id).first_name %></td>
        <% else %>
          <td>Task Assigned for :</td>
          <td><%= User.find(@task.assigned_to).first_name %></td>
        <% end %>
      </tr>
      <tr>
        <td>Task Start Date :</td>
        <td><%= @task.start_date %></td>
      </tr>      
      <tr>
        <td>Expected end date :</td>
        <td><%= @task.expected_end_date %></td>
      </tr>
  </tbody>
</table>

<center>
<%= link_to 'Edit', edit_user_task_path(@user, @task), :class => "btn btn-mini" %> |
<% if @task.user_id == current_user.id %>
<%= link_to 'Back', my_tasks_user_tasks_path, :class => "btn btn-mini btn-info" %>
<% else %>
<%= link_to 'Back', user_tasks_path, :class => "btn btn-mini btn-info" %>
<% end %>
</center>
</div>