<div class="modal hide fade in" style="display: block;">

	<div class="modal-header">

		<button class="close" data-dismiss="modal">	&times; </button>

		<div id="form-heading">
			<h3>User Details</h3>
			<%= image_tag "divider.png" %>
		</div>

	</div>

	<div class="modal-body">

		<div class="modal-content">

			<div id="options-divider"></div>

			<table class="table table-striped table-condensed table-hover" >
				<tr>
					<td><strong>First Name:</strong></td>
					<td>&emsp;<%= @user.first_name.capitalize %><br/></td>
				</tr>

				<tr>
					<td><strong>Last Name:</strong></td>
					<td>&emsp;<%= @user.last_name.capitalize %><br/></td>
				</tr>

				<tr>
					<td><strong>Email:</strong></td>
					<td>&emsp;<%= @user.email %><br/></td>
				</tr>

				<tr>
					<td><strong>Role:</strong></td>
					<td>&emsp;<%= @user.role %><br/></td>
				</tr>
				<tr>
				<td>Profile Status:</td>
					<% if @user.status == "Active" %>
					<td><span class="badge badge-success"><%= @user.status %></span></td>
					<% else %>
					<td><span class="badge badge-warning"><%= @user.status %></span></td>
					<% end %>
				</tr>
				<tr>
					<td><strong>Reported To:</strong></td>
					<% if @user.reported_to == nil %>
					<td>&emsp;Not Reported To anyone </td>
					<% else %>
					<td>&emsp;<%= User.find(@user.reported_to).first_name.capitalize %><br/></td>
					<% end %>
				</tr>

				<tr>
					<td><strong>Project:</strong></td>
					<% if @user.under_project == nil %>
					<td>&emsp;No project Assigned </td>
					<% else %>
					<td>&emsp;<%= Project.find(@user.under_project).project_name %><br/></td>
					<% end %>
				</tr>
			</table>

			<% if can? :crud, @user %>
			<%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-mini' %>|

			<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
			<% end %>
		</div>
	</div>