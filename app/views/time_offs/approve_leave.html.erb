
<div id="form-heading">
	<h3>Approve Leave</h3><%= image_tag 'divider.png' %>
</div>



<table class="table table-striped table-condensed table-hover">
<%= render :partial => "show" %>
</table>

	<h3>Leave Applied By : 
	<%= User.find(@time_off.user_id).first_name %></h3>

<%= form_for(:time_off, :url => {:action => :update}, :html => {:method => :put}) do |f| %>
  <tr>
    <td><%= f.label :status %></td>
    <td><%= f.select :status, ['Approved', 'Rejected', 'Pending'] %></td>
  </tr>
	<%= f.submit 'Approve / Reject' %>
<% end %>


